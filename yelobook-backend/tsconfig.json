{
  "compilerOptions": {
    
    "target": "es2016",  
    "module": "commonjs",         
    "outDir": "./dist",                          
    "rootDir": "./src",                           
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true, 
    "strict": true,              
    "skipLibCheck": true,
    "typeRoots": ["./@types","./node_modules/@types"],
    "types": ["express"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
